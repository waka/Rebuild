<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_color2"
    android:orientation="vertical">

    <rejasupotaro.rebuild.views.SectionHeaderView
        android:id="@+id/section_header_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/episode_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_large"
        android:textColor="@color/text_color_dark"
        android:textSize="@dimen/tertiary_text_size" />

    <rejasupotaro.rebuild.views.VerticalSeparator
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <rejasupotaro.rebuild.views.SectionHeaderView
        android:id="@+id/section_header_show_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <rejasupotaro.rebuild.views.ShowNoteListView
        android:id="@+id/show_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
